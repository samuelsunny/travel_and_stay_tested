    <h3 class="mt-2">Cart items</h3>
    <div class="container-fluid justify-content-center mt-2 mb-5">
        <div class="row justify-content-center">
        <% for(var i=0; i < search_results.length; i++) { %>
            <% if(search_results[i].type == "flight_ticket") { %>
                <div class="row justify-content-center">
